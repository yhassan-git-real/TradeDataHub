<UserControl x:Class="TradeDataHub.Controls.YearMonthPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="36" d:DesignWidth="200">
    
    <Border Style="{StaticResource YearMonthPickerContainer}">
        <Grid Margin="8,3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Year ComboBox -->
            <ComboBox x:Name="YearComboBox" 
                      Grid.Column="0"
                      SelectionChanged="YearComboBox_SelectionChanged"
                      ToolTip="Select Year"
                      Style="{StaticResource YearMonthPickerComboBox}"
                      Margin="0,0,4,0"/>
            
            <!-- Separator -->
            <Border Grid.Column="1" Style="{StaticResource YearMonthPickerSeparator}"/>
            
            <!-- Month ComboBox -->
            <ComboBox x:Name="MonthComboBox" 
                      Grid.Column="2"
                      SelectionChanged="MonthComboBox_SelectionChanged"
                      ToolTip="Select Month"
                      Style="{StaticResource YearMonthPickerComboBox}"
                      Margin="4,0,0,0"/>
        </Grid>
    </Border>
</UserControl>
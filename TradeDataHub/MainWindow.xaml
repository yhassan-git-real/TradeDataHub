<Window x:Class="TradeDataHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradeDataHub"
        mc:Ignorable="d"
        Title="Trade Data Hub" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="From Month (YYYYMM):" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="Txt_Frommonth" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="To Month (YYYYMM):" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="Txtmonthto" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="HS Code(s) (comma-sep):" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="Txt_HS" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Port(s) (comma-sep):" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txt_Port" Grid.Row="3" Grid.Column="1" Margin="5"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Product(s) (comma-sep):" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="Txt_Product" Grid.Row="4" Grid.Column="1" Margin="5"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Exporter(s) (comma-sep):" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="Txt_Exporter" Grid.Row="5" Grid.Column="1" Margin="5"/>

        <TextBlock Grid.Row="6" Grid.Column="0" Text="Foreign Country(s) (comma-sep):" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txt_ForCount" Grid.Row="6" Grid.Column="1" Margin="5"/>

        <TextBlock Grid.Row="7" Grid.Column="0" Text="Foreign Name(s) (comma-sep):" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="Txt_ForName" Grid.Row="7" Grid.Column="1" Margin="5"/>

        <TextBlock Grid.Row="8" Grid.Column="0" Text="IEC(s) (comma-sep):" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="Txt_IEC" Grid.Row="8" Grid.Column="1" Margin="5"/>

        <TextBlock Grid.Row="9" Grid.Column="0" Text="Type:" VerticalAlignment="Center" Margin="5"/>
        <StackPanel Grid.Row="9" Grid.Column="1" Orientation="Horizontal" Margin="5">
            <RadioButton x:Name="rbExport" Content="Export" IsChecked="True" Margin="0,0,20,0" GroupName="ProcessType"/>
            <RadioButton x:Name="rbImport" Content="Import" IsChecked="False" GroupName="ProcessType"/>
        </StackPanel>

        <Button x:Name="GenerateButton" Content="Generate Reports" Grid.Row="10" Grid.Column="1" Margin="5" HorizontalAlignment="Right" Click="GenerateButton_Click"/>

        <StatusBar Grid.Row="12" Grid.ColumnSpan="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>

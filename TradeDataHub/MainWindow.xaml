<Window x:Class="TradeDataHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradeDataHub"
        xmlns:monitoring="clr-namespace:TradeDataHub.Features.Monitoring.Controls"
        mc:Ignorable="d"
        Title="Trade Data Hub" Height="650" Width="1000">
    
    <DockPanel>
        <!-- Professional Menu Bar -->
        <Menu DockPanel.Dock="Top" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Click="MenuNew_Click" InputGestureText="Ctrl+N">
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/Assets/Icons/new.png" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Open" Click="MenuOpen_Click" InputGestureText="Ctrl+O">
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/Assets/Icons/open.png" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Save" Click="MenuSave_Click" InputGestureText="Ctrl+S">
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/Assets/Icons/save.png" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Save _As..." Click="MenuSaveAs_Click" InputGestureText="Ctrl+Shift+S"/>
                <Separator/>
                <MenuItem Header="Recent Files" IsEnabled="False"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="MenuExit_Click" InputGestureText="Alt+F4"/>
            </MenuItem>
            
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" Click="MenuUndo_Click" InputGestureText="Ctrl+Z"/>
                <MenuItem Header="_Redo" Click="MenuRedo_Click" InputGestureText="Ctrl+Y"/>
                <Separator/>
                <MenuItem Header="Cu_t" Click="MenuCut_Click" InputGestureText="Ctrl+X"/>
                <MenuItem Header="_Copy" Click="MenuCopy_Click" InputGestureText="Ctrl+C"/>
                <MenuItem Header="_Paste" Click="MenuPaste_Click" InputGestureText="Ctrl+V"/>
                <Separator/>
                <MenuItem Header="Select _All" Click="MenuSelectAll_Click" InputGestureText="Ctrl+A"/>
                <Separator/>
                <MenuItem Header="_Preferences" Click="MenuPreferences_Click"/>
            </MenuItem>
            
            <MenuItem Header="_View">
                <MenuItem Header="_Basic View" x:Name="MenuBasicView" Click="MenuBasicView_Click" IsCheckable="True" IsChecked="True"/>
                <MenuItem Header="_Advanced View" x:Name="MenuAdvancedView" Click="MenuAdvancedView_Click" IsCheckable="True"/>
                <Separator/>
                <MenuItem Header="_Monitoring Panel" x:Name="MenuMonitoringPanel" Click="MenuMonitoringPanel_Click" IsCheckable="True" IsChecked="True"/>
                <MenuItem Header="_Activity Log" Click="MenuActivityLog_Click" IsCheckable="True" IsChecked="True"/>
                <Separator/>
                <MenuItem Header="_Refresh" Click="MenuRefresh_Click" InputGestureText="F5"/>
                <MenuItem Header="_Full Screen" Click="MenuFullScreen_Click" InputGestureText="F11"/>
            </MenuItem>
            
            <MenuItem Header="_Help">
                <MenuItem Header="_User Manual" Click="MenuUserManual_Click" InputGestureText="F1"/>
                <MenuItem Header="_Quick Start Guide" Click="MenuQuickStart_Click"/>
                <MenuItem Header="_Keyboard Shortcuts" Click="MenuKeyboardShortcuts_Click"/>
                <Separator/>
                <MenuItem Header="_Online Help" Click="MenuOnlineHelp_Click"/>
                <MenuItem Header="_Check for Updates" Click="MenuCheckUpdates_Click"/>
                <Separator/>
                <MenuItem Header="_About Trade Data Hub" Click="MenuAbout_Click"/>
            </MenuItem>
        </Menu>
        
        <!-- Main Content Area -->
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

        <!-- Input Parameters Section Header -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Title on the left -->
            <TextBlock Grid.Column="0" Text="Input Parameters" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
            
            <!-- Improved Toggle Switch with better spacing -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,30,0">
                <TextBlock Text="View:" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="13" Foreground="#555555" FontWeight="Medium"/>
                <Border x:Name="CompactToggle" Background="#F8F8F8" CornerRadius="18" Height="32" Width="110" 
                        MouseLeftButtonDown="ToggleSwitch_Click" Cursor="Hand" BorderBrush="#E0E0E0" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Active indicator (slides left/right) -->
                        <Border x:Name="ActiveIndicator" Grid.Column="0" Background="#0078D4" CornerRadius="16" 
                                Margin="2" HorizontalAlignment="Stretch">
                            <Border.Effect>
                                <DropShadowEffect Color="#0078D4" ShadowDepth="0" BlurRadius="4" Opacity="0.3"/>
                            </Border.Effect>
                        </Border>
                        
                        <!-- Static text labels with improved font -->
                        <TextBlock Grid.Column="0" Text="Basic" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                   Foreground="White" FontWeight="SemiBold" FontSize="11" x:Name="BasicText" FontFamily="Segoe UI"/>
                        <TextBlock Grid.Column="1" Text="Advanced" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                   Foreground="#555555" FontWeight="SemiBold" FontSize="11" x:Name="AdvancedText" FontFamily="Segoe UI"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
        
        <!-- Description -->
        <TextBlock Grid.Row="1" Text="Specify the criteria for your trade data report." 
                   FontStyle="Italic" Foreground="Gray" Margin="0,0,0,15"/>

        <!-- Parameters Container -->
        <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="1" 
                Padding="15" Margin="0,0,0,15" Background="#F9F9F9">
            <StackPanel>
                <!-- Basic Parameters (Always Visible) - First Row -->
                <Grid x:Name="BasicParametersGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Row 1: From Month, To Month, HS Codes -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,15">
                        <TextBlock Text="From Month (YYYYMM)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="Txt_Frommonth" Height="25"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="5,0,5,15">
                        <TextBlock Text="To Month (YYYYMM)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="Txtmonthto" Height="25"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="10,0,0,15">
                        <TextBlock Text="HS Codes" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="Txt_HS" Height="25"/>
                    </StackPanel>
                </Grid>

                <!-- Advanced Parameters (Toggleable) - Rows 2 & 3 -->
                <Grid x:Name="AdvancedParametersGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Row 2: Port Codes, Products, Exporters/Importers -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,15">
                        <TextBlock Text="Port Codes" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txt_Port" Height="25"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="5,0,5,15">
                        <TextBlock Text="Products" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="Txt_Product" Height="25"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="2" Margin="10,0,0,15">
                        <TextBlock x:Name="Lbl_Exporter" Text="Exporters" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="Txt_Exporter" Height="25"/>
                        <TextBlock x:Name="Lbl_Importer" Text="Importers" FontWeight="SemiBold" Margin="0,0,0,5" Visibility="Collapsed"/>
                        <TextBox x:Name="Txt_Importer" Height="25" Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- Row 3: Foreign Countries, Foreign Companies, IEC Codes -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,15">
                        <TextBlock Text="Foreign Countries" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txt_ForCount" Height="25"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="5,0,5,15">
                        <TextBlock Text="Foreign Companies" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="Txt_ForName" Height="25"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="10,0,0,15">
                        <TextBlock Text="IEC Codes" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="Txt_IEC" Height="25"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Mode Section -->
        <Border Grid.Row="3" BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,15" Background="#F5F5F5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Mode Selection -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Mode:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <RadioButton x:Name="rbExport" Content="Export" IsChecked="True" Margin="0,0,20,0" GroupName="ProcessType"/>
                    <RadioButton x:Name="rbImport" Content="Import" IsChecked="False" GroupName="ProcessType"/>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="ResetButton" Content="Reset" Width="80" Height="32" Margin="0,0,10,0" Click="ResetButton_Click"/>
                    <Button x:Name="GenerateButton" Content="Generate Reports" Width="130" Height="32" Margin="0,0,10,0" Click="GenerateButton_Click"/>
                    <Button x:Name="CancelButton" Content="Cancel" Width="80" Height="32" Click="CancelButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Monitoring Status Panel - Positioned for better visual clarity and wide space utilization -->
        <monitoring:MonitoringPanel Grid.Row="4" x:Name="MonitoringPanel" Margin="0,0,0,15"/>

        <!-- Status Bar -->
    </Grid>
    </DockPanel>
</Window>

<Window x:Class="TradeDataHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradeDataHub"
        xmlns:monitoring="clr-namespace:TradeDataHub.Features.Monitoring.Controls"
        xmlns:controls="clr-namespace:TradeDataHub.Controls"
        mc:Ignorable="d"
        Title="Trade Data Hub" Height="700" Width="1000">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Menu -->
            <RowDefinition Height="*"/> <!-- Main Content -->
            <RowDefinition Height="Auto"/> <!-- Footer -->
        </Grid.RowDefinitions>
        
        <!-- Professional Menu Bar -->
        <Menu Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Click="MenuNew_Click" InputGestureText="Ctrl+N">
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/Assets/Icons/new.png" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Open" Click="MenuOpen_Click" InputGestureText="Ctrl+O">
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/Assets/Icons/open.png" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Save" Click="MenuSave_Click" InputGestureText="Ctrl+S">
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/Assets/Icons/save.png" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Save _As..." Click="MenuSaveAs_Click" InputGestureText="Ctrl+Shift+S"/>
                <Separator/>
                <MenuItem Header="Recent Files" IsEnabled="False"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="MenuExit_Click" InputGestureText="Alt+F4"/>
            </MenuItem>
            
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" Click="MenuUndo_Click" InputGestureText="Ctrl+Z"/>
                <MenuItem Header="_Redo" Click="MenuRedo_Click" InputGestureText="Ctrl+Y"/>
                <Separator/>
                <MenuItem Header="Cu_t" Click="MenuCut_Click" InputGestureText="Ctrl+X"/>
                <MenuItem Header="_Copy" Click="MenuCopy_Click" InputGestureText="Ctrl+C"/>
                <MenuItem Header="_Paste" Click="MenuPaste_Click" InputGestureText="Ctrl+V"/>
                <Separator/>
                <MenuItem Header="Select _All" Click="MenuSelectAll_Click" InputGestureText="Ctrl+A"/>
                <Separator/>
                <MenuItem Header="_Preferences" Click="MenuPreferences_Click"/>
            </MenuItem>
            
            <MenuItem Header="_View">
                <MenuItem Header="_Basic View" x:Name="MenuBasicView" Click="MenuBasicView_Click" IsCheckable="True" IsChecked="True"/>
                <MenuItem Header="_Advanced View" x:Name="MenuAdvancedView" Click="MenuAdvancedView_Click" IsCheckable="True"/>
                <Separator/>
                <MenuItem Header="_Monitoring Panel" x:Name="MenuMonitoringPanel" Click="MenuMonitoringPanel_Click" IsCheckable="True" IsChecked="True"/>
                <MenuItem Header="_Activity Log" Click="MenuActivityLog_Click" IsCheckable="True" IsChecked="True"/>
                <Separator/>
                <MenuItem Header="_Refresh" Click="MenuRefresh_Click" InputGestureText="F5"/>
                <MenuItem Header="_Full Screen" Click="MenuFullScreen_Click" InputGestureText="F11"/>
            </MenuItem>
            
            <MenuItem Header="_Help">
                <MenuItem Header="_User Manual" Click="MenuUserManual_Click" InputGestureText="F1"/>
                <MenuItem Header="_Quick Start Guide" Click="MenuQuickStart_Click"/>
                <MenuItem Header="_Keyboard Shortcuts" Click="MenuKeyboardShortcuts_Click"/>
                <Separator/>
                <MenuItem Header="_Online Help" Click="MenuOnlineHelp_Click"/>
                <MenuItem Header="_Check for Updates" Click="MenuCheckUpdates_Click"/>
                <Separator/>
                <MenuItem Header="_About Trade Data Hub" Click="MenuAbout_Click"/>
            </MenuItem>
        </Menu>
        
        <!-- Main Content Area - Using ScrollViewer to handle content overflow properly -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

            <!-- Input Parameters Header with Modern Toggle -->
            <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E9ECEF" BorderThickness="0,0,0,1" Padding="20,15" Margin="0,0,0,20"
                    Style="{StaticResource FadeInAnimation}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Header Content -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Settings Icon -->
                        <Border Background="#0078D4" CornerRadius="8" Width="40" Height="40" Margin="0,0,15,0">
                            <Viewbox Width="20" Height="20" Margin="10">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="White" Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.22,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.22,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.68 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"/>
                                </Canvas>
                            </Viewbox>
                        </Border>
                        
                        <!-- Title Text -->
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Input Parameters" Style="{StaticResource Typography.Header2}"/>
                            <TextBlock Text="Configure your trade data filters" Style="{StaticResource Typography.Caption}" Margin="0,3,0,0"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Compact Modern Toggle Switch -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="View:" VerticalAlignment="Center" Margin="0,0,12,0" 
                                   Style="{StaticResource Typography.Label}" FontWeight="Bold" Foreground="#1F2937"/>
                        
                        <!-- Compact Toggle Container -->
                        <Border x:Name="ToggleContainer" Style="{StaticResource ModernToggleSwitch}" 
                                Width="100" MouseLeftButtonDown="ToggleSwitch_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Basic Option -->
                                <Border x:Name="BasicOption" Grid.Column="0" Tag="Active" 
                                        Style="{StaticResource ToggleOption}">
                                    <TextBlock x:Name="BasicText" Text="Basic" Style="{StaticResource ToggleText}"/>
                                </Border>
                                
                                <!-- All Option -->
                                <Border x:Name="AllOption" Grid.Column="1" Tag="Inactive" 
                                        Style="{StaticResource ToggleOption}">
                                    <TextBlock x:Name="AllText" Text="All" Style="{StaticResource ToggleText}"/>
                                </Border>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Horizontal Separator Line -->
            <Separator Grid.Row="1" Margin="0,10" Background="#D1D5DB" Height="1"/>

            <!-- Parameters Container -->
            <Border Grid.Row="2" BorderBrush="{StaticResource Brush.Border.Light}" BorderThickness="1" 
                    Padding="{StaticResource Spacing.Large}" Margin="{StaticResource Spacing.Medium}" 
                    Background="{StaticResource Brush.Background.Secondary}" 
                    CornerRadius="{StaticResource CornerRadius.Medium}"
                    Style="{StaticResource SlideInFromRightAnimation}">
                <Border.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="1" BlurRadius="6" Opacity="0.08"/>
                </Border.Effect>
                <StackPanel>
                    <!-- Basic Parameters (Always Visible) - First Row -->
                    <Grid x:Name="BasicParametersGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Row 1: From Month, To Month, HS Codes -->
                        <StackPanel Grid.Column="0" Margin="{StaticResource Spacing.Medium}">
                            <TextBlock Text="From Month" Style="{StaticResource Typography.Label}" Margin="{StaticResource Spacing.XSmall}"/>
                            <controls:YearMonthPicker x:Name="FromMonthPicker" Height="32"
                                                      PlaceholderText="Select start month"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="{StaticResource Spacing.Medium}">
                            <TextBlock Text="To Month" Style="{StaticResource Typography.Label}" Margin="{StaticResource Spacing.XSmall}"/>
                            <controls:YearMonthPicker x:Name="ToMonthPicker" Height="32"
                                                      PlaceholderText="Select end month"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="{StaticResource Spacing.Medium}">
                            <TextBlock Text="HS Codes" Style="{StaticResource Typography.Label}" Margin="{StaticResource Spacing.XSmall}"/>
                            <TextBox x:Name="Txt_HS" Height="32" 
                                     Text="Txt_HS"
                                     ToolTip="Enter harmonized system codes (comma-separated)"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Additional Parameters (Toggleable) - Rows 2 & 3 -->
                    <Grid x:Name="AdvancedParametersGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Row 2: Port Codes, Products, Exporters/Importers -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="{StaticResource Spacing.Medium}">
                            <TextBlock Text="Port Codes" Style="{StaticResource Typography.Label}" Margin="{StaticResource Spacing.XSmall}"/>
                            <TextBox x:Name="txt_Port" Height="32" 
                                     ToolTip="Enter port codes (comma-separated)"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="{StaticResource Spacing.Medium}">
                            <TextBlock Text="Products" Style="{StaticResource Typography.Label}" Margin="{StaticResource Spacing.XSmall}"/>
                            <TextBox x:Name="Txt_Product" Height="32"
                                     ToolTip="Enter product names or keywords"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="{StaticResource Spacing.Medium}">
                            <TextBlock x:Name="Lbl_Exporter" Text="Exporters" Style="{StaticResource Typography.Label}" Margin="{StaticResource Spacing.XSmall}"/>
                            <TextBox x:Name="Txt_Exporter" Height="32"
                                     ToolTip="Enter exporter company names"
                                     Style="{StaticResource ModernTextBox}"/>
                            <TextBlock x:Name="Lbl_Importer" Text="Importers" Style="{StaticResource Typography.Label}" Margin="{StaticResource Spacing.XSmall}" Visibility="Collapsed"/>
                            <TextBox x:Name="Txt_Importer" Height="32" Visibility="Collapsed"
                                     ToolTip="Enter importer company names"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <!-- Row 3: Foreign Countries, Foreign Companies, IEC Codes -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="{StaticResource Spacing.Medium}">
                            <TextBlock Text="Foreign Countries" Style="{StaticResource Typography.Label}" Margin="{StaticResource Spacing.XSmall}"/>
                            <TextBox x:Name="txt_ForCount" Height="32"
                                     ToolTip="Enter country names or codes"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="{StaticResource Spacing.Medium}">
                            <TextBlock Text="Foreign Companies" Style="{StaticResource Typography.Label}" Margin="{StaticResource Spacing.XSmall}"/>
                            <TextBox x:Name="Txt_ForName" Height="32"
                                     ToolTip="Enter foreign company names"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="2" Margin="{StaticResource Spacing.Medium}">
                            <TextBlock Text="IEC Codes" Style="{StaticResource Typography.Label}" Margin="{StaticResource Spacing.XSmall}"/>
                            <TextBox x:Name="Txt_IEC" Height="32"
                                     ToolTip="Enter Import Export Code numbers"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Horizontal Separator Line -->
            <Separator Grid.Row="3" Margin="0,10" Background="#D1D5DB" Height="1"/>

            <!-- Mode Section -->
            <Border Grid.Row="4" BorderBrush="{StaticResource Brush.Border.Light}" BorderThickness="1" 
                    Padding="{StaticResource Spacing.Medium}" Margin="{StaticResource Spacing.Medium}" 
                    Background="{StaticResource Brush.Background.Tertiary}"
                    CornerRadius="{StaticResource CornerRadius.Medium}"
                    Style="{StaticResource ScaleUpAnimation}">
                <Border.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="1" BlurRadius="6" Opacity="0.08"/>
                </Border.Effect>
                
                <!-- Two Row Layout -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Top Row: Mode Selection -->
                    <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" 
                              Margin="0,0,0,16">
                        <TextBlock Text="Mode:" Style="{StaticResource Typography.Label}" VerticalAlignment="Center" 
                                 Margin="0,0,16,0" FontWeight="Medium"/>
                        <RadioButton x:Name="rbExport" Content="Export" IsChecked="True" VerticalAlignment="Center" 
                                   Margin="0,0,24,0" GroupName="ProcessType" FontSize="14" Padding="4,0,0,0"/>
                        <RadioButton x:Name="rbImport" Content="Import" IsChecked="False" VerticalAlignment="Center" 
                                   GroupName="ProcessType" FontSize="14" Padding="4,0,0,0"/>
                    </StackPanel>

                    <!-- Bottom Row: View and Stored Procedure -->
                    <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- View Dropdown -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,32,0">
                            <TextBlock Text="View:" Style="{StaticResource Typography.Label}" VerticalAlignment="Center" 
                                     Margin="0,0,12,0" FontWeight="Medium"/>
                            <ComboBox x:Name="ViewComboBox" Width="140" Height="32" VerticalAlignment="Center"
                                      DisplayMemberPath="DisplayName" 
                                      SelectedValuePath="Name" 
                                      SelectionChanged="ViewComboBox_SelectionChanged"
                                      Style="{StaticResource ModernComboBox}"/>
                        </StackPanel>
                        
                        <!-- Stored Procedure Dropdown -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Stored Procedure:" Style="{StaticResource Typography.Label}" VerticalAlignment="Center" 
                                     Margin="0,0,12,0" FontWeight="Medium"/>
                            <ComboBox x:Name="StoredProcedureComboBox" Width="140" Height="32" VerticalAlignment="Center"
                                      DisplayMemberPath="DisplayName" 
                                      SelectedValuePath="Name" 
                                      SelectionChanged="StoredProcedureComboBox_SelectionChanged"
                                      Style="{StaticResource ModernComboBox}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Action Buttons - Right Side, Vertically Centered -->
                    <Grid Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Margin="0,0,0,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,0">
                            <Button x:Name="ResetButton" Content="Reset" Width="75" Height="34" Margin="0,0,8,0" 
                                  Click="ResetButton_Click" Style="{StaticResource NeutralButton}" FontSize="13" FontWeight="Medium"/>
                            <Button x:Name="GenerateButton" Content="Generate Report" Width="140" Height="34" Margin="0,0,8,0" 
                                  Click="GenerateButton_Click" Style="{StaticResource SuccessButton}" FontSize="13" FontWeight="SemiBold"/>
                            <Button x:Name="CancelButton" Content="Cancel" Width="75" Height="34" 
                                  Click="CancelButton_Click" Style="{StaticResource DangerButton}" FontSize="13" FontWeight="Medium"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Horizontal Separator Line -->
            <Separator Grid.Row="5" Margin="0,10" Background="#D1D5DB" Height="1"/>

            <!-- Monitoring Status Panel with improved height -->
            <monitoring:MonitoringPanel Grid.Row="6" x:Name="MonitoringPanel" Margin="0"/>
        </Grid>
        </ScrollViewer>

        <!-- Professional Footer Section -->
        <Border Grid.Row="2" Background="{StaticResource Brush.Background.Secondary}" 
                BorderBrush="{StaticResource Brush.Border.Light}" BorderThickness="0,1,0,0"
                MinHeight="30">
            <Grid Margin="12,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Application Info -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Trade Data Hub" 
                               Style="{StaticResource Typography.Label}" 
                               FontWeight="SemiBold" 
                               Foreground="{StaticResource Brush.Text.Primary}"
                               VerticalAlignment="Center"/>
                    <!-- Separator -->
                    <TextBlock Text=" | " 
                               Style="{StaticResource Typography.Caption}" 
                               Foreground="{StaticResource Brush.Text.Secondary}"
                               Margin="6,0"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="v1.0.0" 
                               Style="{StaticResource Typography.Caption}"
                               Foreground="{StaticResource Brush.Text.Secondary}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Center Status -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse x:Name="FooterStatusIndicator" 
                             Width="8" Height="8" 
                             Fill="#28a745" 
                             Margin="0,0,8,0" 
                             VerticalAlignment="Center"/>
                    <TextBlock x:Name="FooterStatusText" 
                               Text="System Ready" 
                               Style="{StaticResource Typography.Caption}" 
                               Foreground="{StaticResource Brush.Text.Primary}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- System Info -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                    <TextBlock x:Name="MemoryUsageText" 
                               Text="Memory: 128 MB" 
                               Style="{StaticResource Typography.Caption}"
                               Foreground="{StaticResource Brush.Text.Secondary}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Copyright -->
                <TextBlock Grid.Column="3" 
                           Text="© 2025 Trade Data Hub" 
                           Style="{StaticResource Typography.Caption}"
                           Foreground="{StaticResource Brush.Text.Secondary}"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>

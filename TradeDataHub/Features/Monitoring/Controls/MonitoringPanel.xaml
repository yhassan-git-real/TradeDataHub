<UserControl x:Class="TradeDataHub.Features.Monitoring.Controls.MonitoringPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    


    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Modern System Monitor Section -->
        <Border Grid.Row="0" 
                Background="{StaticResource Brush.Card.Background}"
                BorderBrush="{StaticResource Brush.Card.Border}" 
                BorderThickness="1" 
                CornerRadius="8,8,0,0"
                Padding="16,12,16,12" 
                Margin="0,0,0,0" 
                MinHeight="70"
                Effect="{StaticResource Shadow.Container}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- System Status Section -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,24,0" MinWidth="200">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <Border x:Name="StatusBadge" Style="{StaticResource ModernStatusBadge}">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse x:Name="StatusIndicator" Width="8" Height="8" 
                                         Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock x:Name="StatusText" Text="Idle" 
                                           Style="{StaticResource Typography.Caption}"
                                           FontWeight="SemiBold" Foreground="White"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <TextBlock x:Name="StatusMessage" Text="Application ready" 
                               Style="{StaticResource Typography.Body}" 
                               FontWeight="Medium"
                               Margin="0,0,0,2"/>
                </StackPanel>

                <!-- Control Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center"
                            HorizontalAlignment="Right" Margin="0,0,0,0">
                    <ToggleButton x:Name="StartStopToggle" Content="Start" Width="80" 
                                  IsChecked="False" Click="StartStopToggle_Click"
                                  Style="{StaticResource ModernToggleButton}" 
                                  Margin="0,0,8,0" FontSize="12" FontWeight="SemiBold"
                                  ToolTip="Start/Stop real-time log display"/>
                    <Button x:Name="ClearLogsButton" Content="Clear" Width="80" 
                            Click="ClearLogsButton_Click" Style="{StaticResource NeutralButton}"
                            Margin="0,0,8,0" FontSize="12" FontWeight="SemiBold"/>
                    <ToggleButton x:Name="AutoScrollToggle" Content="Auto" Width="80" 
                                  IsChecked="True" Click="AutoScrollToggle_Click"
                                  Style="{StaticResource ModernToggleButton}" FontSize="12" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Modern Activity Monitor Header -->
        <Border x:Name="ActivityMonitorHeader"
                Grid.Row="1" Background="{StaticResource Brush.Card.Background}" 
                BorderBrush="{StaticResource Brush.Card.Border}" 
                CornerRadius="8,8,0,0"
                Padding="16,12">
            <Border.Effect>
                <DropShadowEffect BlurRadius="6" ShadowDepth="2" 
                                  Color="#000000" Opacity="0.1" Direction="270"/>
            </Border.Effect>
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="BorderThickness" Value="1,1,1,0"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsExpanded}" Value="False">
                            <Setter Property="BorderThickness" Value="1,1,1,1"/>
                            <Setter Property="CornerRadius" Value="8"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Activity Monitor" 
                               Style="{StaticResource Typography.Header3}" 
                               FontWeight="SemiBold"
                               Margin="0,0,12,0"/>
                    <TextBlock x:Name="LogCountText" Text="0 entries" 
                               Style="{StaticResource Typography.Caption}" 
                               FontWeight="Medium"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Search Bar for Activity Monitor -->
                <Border Grid.Column="1" Style="{StaticResource ModernSearchBox}" Margin="16,0,16,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Search Icon -->
                        <Path Grid.Column="0" Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                              Fill="{StaticResource Brush.Text.Secondary}" Width="14" Height="14" 
                              Margin="8,0,0,0" VerticalAlignment="Center"
                              Stretch="Uniform"/>
                        
                        <!-- Search TextBox -->
                        <TextBox x:Name="LogSearchTextBox" Grid.Column="1"
                                 Text=""
                                 Style="{StaticResource ModernSearchTextBox}"
                                 GotFocus="LogSearchTextBox_GotFocus" 
                                 LostFocus="LogSearchTextBox_LostFocus"/>
                        
                        <!-- Clear Button -->
                        <Button x:Name="ClearSearchButton" Grid.Column="2"
                                Style="{StaticResource ModernClearButton}"
                                Margin="0,0,4,0"
                                Visibility="Collapsed" Click="ClearSearchButton_Click"
                                ToolTip="Clear search">
                            <Path Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                  Fill="{StaticResource Brush.Text.Secondary}" Width="10" Height="10" 
                                  Stretch="Uniform"/>
                        </Button>
                    </Grid>
                </Border>
                
                <TextBlock Grid.Column="2" Text="Real-time processing logs and system activity" 
                           Style="{StaticResource Typography.Caption}"
                           FontWeight="Medium"
                           Margin="0,0,16,0" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>

                <!-- Expand/Collapse Toggle Button -->
                <Button x:Name="ExpandCollapseButton" 
                        Grid.Column="3" 
                        Style="{StaticResource ModernExpandCollapseButton}"
                        Margin="0,0,0,0"
                        Click="ExpandCollapseButton_Click"
                        ToolTip="Expand/Collapse Activity Monitor">
                    <Button.Content>
                        <Border Style="{StaticResource ModernExpandCollapseIcon}">
                            <TextBlock x:Name="ExpandCollapseIcon"
                                       Text="▼"
                                       FontSize="{StaticResource FontSize.XSmall}"
                                       Foreground="{StaticResource Brush.Text.Primary}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       RenderTransformOrigin="0.5,0.5">
                                <TextBlock.RenderTransform>
                                    <RotateTransform x:Name="IconRotateTransform" Angle="0"/>
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </Border>
                    </Button.Content>

                </Button>
            </Grid>
        </Border>

        <!-- Modern Logs Viewer Section -->
        <Border x:Name="LogsViewerBorder"
                Grid.Row="2" Background="{StaticResource Brush.Card.Background}" 
                BorderBrush="{StaticResource Brush.Card.Border}" 
                BorderThickness="1,0,1,1" CornerRadius="0,0,8,8"
                ClipToBounds="True">
            <Border.Effect>
                <DropShadowEffect BlurRadius="6" ShadowDepth="2" 
                                  Color="#000000" Opacity="0.1" Direction="270"/>
            </Border.Effect>
            <Border.Style>
                <Style TargetType="Border" BasedOn="{StaticResource FadeInAnimation}">
                    <Setter Property="Height" Value="200"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsExpanded}" Value="False">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard x:Name="CollapseStoryboard">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Height"
                                                       To="0"
                                                       Duration="{StaticResource Animation.Normal}"
                                                       EasingFunction="{StaticResource Ease.Standard}"/>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                       To="0"
                                                       Duration="{StaticResource Animation.Fast}"
                                                       EasingFunction="{StaticResource Ease.Standard}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Height"
                                                       To="200"
                                                       Duration="{StaticResource Animation.Normal}"
                                                       EasingFunction="{StaticResource Ease.Standard}"/>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                       To="1"
                                                       Duration="{StaticResource Animation.Normal}"
                                                       EasingFunction="{StaticResource Ease.Standard}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <ListView x:Name="LogsListView" 
                      Background="Transparent" BorderThickness="0"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ScrollViewer.VerticalScrollBarVisibility="Visible"
                      ScrollViewer.CanContentScroll="True"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      AlternationCount="2"
                      ItemContainerStyle="{StaticResource ModernLogEntry}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="⏰ Time" Width="95">
                                <GridViewColumn.HeaderContainerStyle>
                                    <StaticResource ResourceKey="ModernColumnHeader"/>
                                </GridViewColumn.HeaderContainerStyle>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource TimeBadge}">
                                            <TextBlock Text="{Binding FormattedTimestamp}" 
                                                       Style="{StaticResource MonospaceText}"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            
                            <GridViewColumn Header="📊 Level" Width="70">
                                <GridViewColumn.HeaderContainerStyle>
                                    <StaticResource ResourceKey="ModernColumnHeader"/>
                                </GridViewColumn.HeaderContainerStyle>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding LevelColor}" 
                                                Style="{StaticResource LogLevelBadge}">
                                            <TextBlock Text="{Binding LevelText}" 
                                                       FontSize="{StaticResource FontSize.XSmall}" 
                                                       FontWeight="{StaticResource FontWeight.Bold}" 
                                                       Foreground="{StaticResource Brush.Text.OnPrimary}" 
                                                       HorizontalAlignment="Center"
                                                       FontFamily="{StaticResource PrimaryFontFamily}"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            
                            <GridViewColumn Header="📋 Source" Width="120">
                                <GridViewColumn.HeaderContainerStyle>
                                    <StaticResource ResourceKey="ModernColumnHeader"/>
                                </GridViewColumn.HeaderContainerStyle>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Source}" 
                                                   Style="{StaticResource Typography.Caption}"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Left"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            
                            <GridViewColumn Header="💬 Message" Width="800">
                                <GridViewColumn.HeaderContainerStyle>
                                    <StaticResource ResourceKey="ModernColumnHeader"/>
                                </GridViewColumn.HeaderContainerStyle>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Padding="4,2">
                                            <TextBlock Text="{Binding Message}" 
                                                       Style="{StaticResource Typography.Body}"
                                                       TextWrapping="Wrap" 
                                                       ToolTip="{Binding Message}"
                                                       MaxWidth="580"
                                                       LineHeight="18"
                                                       FontSize="12"
                                                       FontWeight="Medium"
                                                       Foreground="Black"
                                                       HorizontalAlignment="Left"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
        </Border>
    </Grid>
</UserControl>
